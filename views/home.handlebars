</head>

<body>
    <table style="margin-left: 20px; width: 95%" class="table table-sm table-hover">
        <thead>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
        <tbody class="table-hover">
            {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>
                    <a href="/users" class="btn btn-primary">Edit</a>
                    <a href="/users" class="btn btn-warning">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{!-- <hr /> --}}
    <div style="margin-left: 20px; witdth: 95%">
        <a href="user/add" class="btn btn-info">Add new user</a>
    </div>
    <hr />

</body>

</html>