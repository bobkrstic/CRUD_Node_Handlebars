<!DOCTYPE html>
<html>

<head>
    <title>Home Page</title>
</head>

<body>
    <table>
        <thead>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>
                    <a href="/users">Edit</a>
                    <a href="/users">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <button>Add a new user</button>
</body>

</html>